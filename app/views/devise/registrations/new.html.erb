<div class="col-md-12">
</br></br>
</div>
<div class="col-md-3">
  <p class="custom-medium-title">Créer un compte</p>
<div class="col-md-12">
</br>
</div>

  <%= link_to root_path, {class: "btn btn-default btn-xs col-md-8"} do%>
      <p class="glyphicon glyphicon-chevron-left"></p> Retour 
  <%end%>
</div>

<div class="col-md-9">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>

    <% if resource.errors.any? %>
<%= render partial: 'shared/alert' , locals:  {tab: resource.errors}%>
<%end%>

    <div class="form-group">
      <%= f.label :email, :class => "col-md-2 control-label"  %>
      <div class="col-md-8">
      <%= f.email_field :email, autofocus: true , :class => "form-control" %>
    </div>
    </div>

      <div class="form-group">
      <%= f.label "Nom d'utilisateur", :class => "col-md-2 control-label"  %>
      <div class="col-md-8">
      <%= f.text_field :username , :class => "form-control" %>
    </div>
    </div>

    <div class="form-group">
      <%= f.label "Mot de passe" , :class => "col-md-2 control-label"  %>
      <div class="col-md-8">
      <%= f.password_field :password, autocomplete: "off" , :class => "form-control" %>
    </div>
    </div>

    <div class="form-group">
      <%= f.label "Confirmer mot de passe" , :class => "col-md-2 control-label"  %>
      <div class="col-md-8">
      <%= f.password_field :password_confirmation, autocomplete: "off" , :class => "form-control" %>
    </div>
    </div>

<div class="form-group">
  <div class="col-md-8 col-md-offset-2">
      <%= f.submit "Créer le compte",:class => "btn btn-primary col-md-12"%>
  </div>
</div>

  <% end %>
</div>

