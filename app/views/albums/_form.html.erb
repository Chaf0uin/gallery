<%= form_for @album, :html => { :class => 'form-horizontal', multipart: true } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :photos, :class => 'control-label' %>
    <div class="controls">
      <%= file_field_tag "images[]", type: :file, multiple: true, :class => 'btn btn-primary'  %>
    </div>
  </div>

  <br />

    <%= f.submit "Sauvergarder", :class => 'btn btn-primary', :id => 'save_album', :onclick => "console.log('lalal'); document.getElementById('progress_upload').style.display = 'block'; console.log('lalal');" %>
